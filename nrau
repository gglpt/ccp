		function ccpTOC(what, whereTo) {
			const SCROLL_SPY_TAG = '.bs-docs-sidebar', SCROLL_SPY_MONITOR = 80, AFFIX_TAG = '#nav', AFFIX_OFFSET_TOP = 200;
				SMOOTH_SCROLL_PARENT_TAG = '#tocSeed', SMOOTH_SCROLL_TIMER = 800,
				HEADINGS = ['h1', 'h2', 'h3', 'h4', 'h5', 'h55', 'h6'],
				HEADING_LEVEL_MAP = {H1:0, H2:1, H3:2, H4:3, H5:4, H55:5, H6:6 }
			var placeHolder = document.getElementById(whereTo);
			if (placeHolder === null) { alert("Placeholder '" + whereTo + "' not found in page body. TOC not inserted."); return; }
			var docToC = document.getElementById(what).querySelectorAll(HEADINGS);
			var levels = [0], res = '', item, isFirst = true;
			[].forEach.call(docToC, function(item) {
				if (item.nodeType !== 1) return;
				var currentLevel = HEADING_LEVEL_MAP[item.nodeName];
				if (currentLevel > levels[levels.length - 1]) {
					res +=  '<ul' + ' class="nav nav-pills nav-stacked"' + (isFirst?' id="nav" data-spy="affix"':'') +
							'><li><a href="#' + item.id + '"' + '>' + composeReference2(item.innerText) + '</a>';
					isFirst = false;
					levels.push(currentLevel);
				} else if (currentLevel < levels[levels.length - 1]) {
					while (currentLevel < levels[levels.length - 1]) {
						res += '</li></ul>';
						levels.pop(currentLevel);
					}
					res += '<li><a href="#' + item.id + '">' + composeReference2(item.innerText) + '</a>';
				} else res += '</li><li><a href="#' + item.id + '">' + composeReference2(item.innerText) + '</a>';
			}	);
			res += '</li></ul>'
			placeHolder.innerHTML = res;
			assignAffix(AFFIX_TAG);
			enableScrollSpy(SCROLL_SPY_TAG, SCROLL_SPY_MONITOR);
			refreshScrollSpy();
			$(SMOOTH_SCROLL_PARENT_TAG + ' a').on('click', new SmoothScroll(SMOOTH_SCROLL_TIMER).runner(event));
		}
		// Tools: check, convert & compose
		function toRoman(v) {return isNumber(v) ?
			[ 'I',  'II', 'III', 'IV', 'V', 'VI', 'VII', 'VIII', 'IX', 'X', 'XI', 'XII', 'XIII', 'XIV', 'XV', 'XVI', 'XVII', 'XVIII', 'XIX', 'XX'][v-1] : ''; }
		function isNumber(v) {return isUndefined(v) ? false : !("" + v).match(/[a-z]/i); }
		function isUndefined(v) {return (typeof v === "undefined"); }
		function composeReference2(str) {
			if (!str) return ''
			var sp = str.split(' ')
			return sp[0] + ' ' + sp[1]
		}
		function composeReference(clazz, id, tag) {
			var _id;
			switch (clazz) {
				case 'article': case 'articleA': _id = id + '.º'; break;
				case 'chapter': _id = id ? toRoman(id.split('c')[1]) : ''; break;
				case 'title': case 'titleA':
					var _nr = id ? id.split('t')[1] : '';
					if (isUndefined(_nr)) _id = '';
					else _id = isNumber(_nr) ? toRoman(_nr) : toRoman(_nr.substring(0, _nr.length-1)) + '-' + _nr.substr(_nr.length-1, 1);
					break;
				case 'section': _id = id ? toRoman(id.split('s')[1]) : ''; break;
				case 'annex': _id = id ? toRoman(id.split('a')[1]) : ''; break;
				case 'part': _id = id ? toRoman(id.split('p')[1]) : ''; break;
				case 'subsection': _id = id ? toRoman(id.split('s')[2]) : ''; break;
			}
			return _id === '' ? '' : DOC_SECTIONS_MAP[clazz] + ' ' + _id + tag;
		}
		// Scroll stuff

		function assignAffix(tag) {$(tag).affix(); }
		//function assignAffix(tag) {$(tag).affix({offset: {top: 200}}); }
		function enableScrollSpy(targetValue, monitorOffsetValue) {$('body').scrollspy({ target: targetValue, offset: monitorOffsetValue }) }
		function refreshScrollSpy() {$('body').scrollspy("refresh"); }
		function SmoothScroll(scrollTimer) {
			this.scrollTimer = scrollTimer;
			this.runner = function() {
				return function(event) {
					var hash = this.hash;
					if (hash) {
						event.preventDefault();
						$('html, body').animate({ scrollTop: $(hash).offset().top }, scrollTimer, function() {window.location.hash = hash; });
		}	};	};	}

	</script>
</head>

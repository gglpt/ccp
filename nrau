	<script type="application/javascript">
		const DOC_SECTIONS_TYPES = ['part', 'title', 'chapter', 'section', 'subsection', 'article', 'articleA', 'annex']		
		const DOC_SECTIONS_MAP = {part:'PARTE', title:'TÍTULO', titleA:'TÍTULO', chapter:'CAPÍTULO', section:'SECÇÃO', subsection:'SUBSECÇÃO', article:'Artigo', articleA:'Artigo', annex:'ANEXO'};
		function docSetup() {
			for (arg of arguments) {
				switch (arg) {
					case 'bodyFill': bodyFill('#bodySeed'); break;
					case 'topMenu': topMenu('#menuSeed'); break;
					case 'TOC': ccpTOC('bodySeed', 'tocSeed'); break;
					case 'autoATitles': autoATitles(); break;
					case 'fulfillLinks': fulfillLinks(); break;
					case 'fulfillTopAlign': fulfillTopAlign(); break;
					case 'prettyfy': prettyfy(); break;
		}	}	}
		// Prototype extensions
		String.prototype.getTag = function() {
			var aux = this.indexOf('#') + 1
			var res = this.slice(aux)
			return this.slice(this.indexOf('#') + 1)
		}
		function getValueOfQueryField(field) {
			var queryString = self.location.search.substring(1)
			for (fieldValue of queryString.split('&')) {
				var pair = fieldValue.split('=')
				if (decodeURIComponent(pair[0]) === field) return decodeURIComponent(pair[1])
			}
		}
		function processSearch() {
			var search = getValueOfQueryField('search')
			var searchInput = document.getElementById('searchTarget')
			if (!search) return
			var count = eval(getValueOfQueryField('count'))
			if (window.find) {
				var i;
				for (i = 0; i < count; i++) {
					if (self.find(search, 0, 0, 1, 1, 0))
						document.getElementById('searchCounter').value = count + 1
				}
			} else alert('can\'t do')
			searchInput.value = search
		}
		/*
		document.addEventListener('keypress', function(event) {
			if (event.keyCode == 13) {
				processSearch()
			}
		});
		*/
		Document.prototype.getElementsByClassNameAsArray = function(arguments) {
			var res = [], arg, aux;
			for (arg of arguments) {
				aux = Array.from(this.getElementsByClassName(arg))
				res = res.concat(aux)
			}
			return res;
		}
		// Ops
		function autoATitles() {
			var aTitlesMap = {}, item,
			epigraphs = document.getElementsByClassNameAsArray(DOC_SECTIONS_TYPES),
			anchors = document.getElementsByTagName("a")
			for (item of epigraphs) if (item.firstChild) aTitlesMap[item.firstChild.id] = composeSectionTitle(item, ': ')
			for (item of anchors) {
				var aux = aTitlesMap[item.href.getTag()]
				if (aux) item.title = aux
			}
		}
		function prettyfy() {
			document.body.innerHTML = document.body.innerHTML
				.replace(/\sn\.os\s/g, ' n.<sup>os</sup>&nbsp;')
				.replace(/(\d+)\s%/g, '$1&nbsp;%')
				.replace(/(\d+)\s(\d{3})/g, '$1&nbsp;$2')
				.replace(/\.º\s(\d+)/g, '.º&nbsp;$1')
		}
		function fulfillLinks() {
			document.body.innerHTML = document.body.innerHTML
				.replace(/_(artigo(?:s?))\s(\d+\.º-?[A-Z]*)\((#\d+\S*)\)_/g, '<a href="$3">$1&nbsp;$2</a>')
				.replace(/_parte\s([ivxlcdm]+)\((#p\d+)\)_/gi, '<a href="$2">parte&nbsp;$1</a>')
		}
		function fulfillTopAlign() {fulfill(['article', 'articleA', 'annex'], 'glyphicon glyphicon-chevron-up', setTopAlign); }
		function composeSectionTitle(item, tag) {return item.firstChild.textContent.trim(); }
		function setTopAlign(item, iconSpec) {item.firstChild.innerHTML = '<a href="#' + item.firstChild.id + '"><span class="' + iconSpec + '"></span></a>&nbsp;' + item.firstChild.textContent.trim(); }
		function fulfill(sectionTypes, fulfillment, runner) {
			sectionTypes.forEach(function(sectionType) {
				for (section of document.getElementsByClassName(sectionType))
					runner(section, fulfillment);
			});
		}
		function topMenu(whereTo) {
			var template = '<div class="navbar navbar-inverse navbar-fixed-top"><div class="container-fluid"><div class="navbar-header"><button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button><a class="navbar-brand brand-name" href="http://ggl.pt" target="_blank" title="Ggl Consulting">Ggl Consulting</a></div><div class="collapse navbar-collapse"><ul class="nav navbar-nav">{{#menu}}<li><a title="{{description}}" href="{{link}}">{{data}}</a></li>{{/menu}}</ul><div class="pull-right">\
			<form id="searchForm" class="navbar-form" role="search" onsubmit="processSearch()">\
				<div class="input-group">\
					<input type="text" class="form-control" id="searchTarget" placeholder="wip..." name="search">\
					<input type="hidden" id="searchCounter" name="count" value = 1>\
					<div class="input-group-btn">\
						<button id="searchButton" type="submit" class="btn btn-default" onclick="processSearch()">\
							<i class="glyphicon glyphicon-search"></i>\
						</button>\
					</div>\
				</div>\
			</form>\
			</div></div></div></div>'
			var data = { 'menu': [
				{'data': 'Início', 'description': 'Topo da página', 'link': '#'},
				{'data': 'Legislação', 'description': 'Biblioteca de Legislação', 'link': 'http://www.ggl.pt/ferramentas/legislação'},
				{'data': 'Notificações', 'description': 'Pedido de notificação de atualizações e novos documentos', 'link': 'mailto:geral@ggl.pt?subject=Legislação GGL: Pedido de notificação'},
				{'data': 'GGL', 'description': 'Site da Ggl Consulting', 'link': 'http://ggl.pt'}
			]}
			$('#searchForm').submit(function(event) {
				 alert('Ok Fa'); event.preventDefault(); event.stopPropagation(); return false;
			})
			$(whereTo).html(Handlebars.compile(template)(data))
		}
		function searchInPage() {
			/*
			var str = document.getElementById ("searchTerms").value
			if (str == "") return;
			var isFirst = true, jumpTo
			//var wholeWordOnly = new RegExp("\\g"+searchTerm+"\\g","ig"); //matches whole word only
			//var anyCharacter = new RegExp("\\g["+searchTerm+"]\\g","ig"); //matches any word with any of search chars chara
			for (tag of ['h2', 'h3', 'h4', 'h5', 'h55', 'h6', 'li']) {
				var els = document.getElementsByTagName(tag)
				for (el of els) {
					if (el.textContent.includes(str)) {
						if (isFirst) {
							jumpTo = el
							isFirst = false;
						}
						var found = el
						searchAndHighlight(str, el, 'highligth', true)
			}	}	}
			console.log(el.parentElement.parentElement)
			jumpTo.scrollIntoView({alignToTop: true, behaviour: "smooth"})
			*/
		}
		function searchAndHighlight(term, selector, highlightClass, isRemovePreviousHighlights) {
			if (term) {
				//var wholeWordOnly = new RegExp("\\g" + term + "\\g","ig"); //matches whole word only
				//var anyCharacter = new RegExp("\\g[" + term + "]\\g","ig"); //matches any word with any of search chars characters
				var selector = selector || "body",
				searchTermRegEx = new RegExp('('+ term +')', 'gi'),
				matches = 0,
				helper = {}
				helper.doHighlight = function(node, term){
					if (node.nodeType === 3) {
						if (node.nodeValue.match(searchTermRegEx)){
							matches++
							var tempNode = document.createElement('span')
							tempNode.innerHTML = node.nodeValue.replace(searchTermRegEx, '<span class="' + highlightClass + '">$1</span>')
							node.parentNode.insertBefore(tempNode, node )
							node.parentNode.removeChild(node)
					}	}
					else if (node.nodeType === 1 && node.childNodes && !/(style|script)/i.test(node.tagName)) {
						$.each(node.childNodes, function(i, v) {
							helper.doHighlight(node.childNodes[i], term)
				})	}	}
				if (isRemovePreviousHighlights) {
					$('.' + highlightClass).each(function(i, v){
						var $parent = $(this).parent()
						$(this).contents().unwrap()
						$parent.get(0).normalize()
				})	}
				$.each($(selector).children(), function(index, val){
					helper.doHighlight(this, term)
				})
				return matches
			}
			return false
		}
		function bodyFill(whereTo) {
			Handlebars.registerPartial('injectArticle','<article class=article><h6 id={{id}}>{{nr}}: {{epigraph}}</h6><ol type="1">{{#content}}{{#if id}}<li seq="{{li}}">{{data}}{{else}}<li seq="{{li}}">{{data}}{{/if}}{{#if content}}<ol type="a">{{#content}}<li seq="{{li}}">{{data}}</li>{{#if content}}<ol type="i">{{#content}}<li seq="{{li}}">{{data}}</li>{{/content}}</ol>{{/if}}{{/content}}</ol>{{/if}}</li>{{/content}}</ol></article>');
			var template = '<h1>{{subject}}</h1><div id = "content">{{#body}}<section class={{section}}>{{#if article}}{{> injectArticle}}{{else}}<h2 id={{id}}>{{nr}} - {{epigraph}}</h2>{{#content}}<section class={{section}}>{{#if article}}{{> injectArticle}}{{else}}<h3 id={{id}}>{{nr}} - {{epigraph}}</h3>{{#content}}<section class={{section}}>{{#if article}}{{> injectArticle}}{{else}}<h4 id={{id}}>{{nr}} - {{epigraph}}</h4>{{#content}}<section class={{section}}>{{#if article}}{{> injectArticle}}{{else}}<h5 id={{id}}>{{nr}} - {{epigraph}}</h5>{{#content}}<section class={{section}}>{{#if article}}{{> injectArticle}}{{else}}<h55 id={{id}}>{{nr}} - {{epigraph}}</h55>{{#content}}{{> injectArticle}}{{/content}}{{/if}}</section>{{/content}}{{/if}}</section>{{/content}}{{/if}}</section>{{/content}}{{/if}}</section>{{/content}}{{/if}}</section>{{/body}}</div>';
			var data = {
